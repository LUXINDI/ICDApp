<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"  >
<TextView
    android:layout_margin="10dp" android:textSize="18dp"
    android:layout_width="match_parent" android:id="@+id/db_tip"
    android:text="The database contains 0 records."
    android:layout_height="wrap_content" />

<Button android:layout_gravity="center" android:layout_marginTop="100dp"
    android:id="@+id/btnUpdate"
    android:layout_width="200dp"
    android:layout_height="50dp" android:text="Begin to Update" />
    <TextView
        android:layout_marginTop="10dp"
        android:gravity="center" android:id="@+id/tv_progress"
        android:layout_width="match_parent" android:textSize="17dp" android:text="Please DO NOT close this window when updating!"
        android:layout_height="wrap_content" />
</LinearLayout>