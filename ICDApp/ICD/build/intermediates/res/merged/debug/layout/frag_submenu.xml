<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent" android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="match_parent" android:orientation="vertical">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="250dp"
            android:text="Neoplasm Table"
            android:textColor="@color/white"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@color/textcolor"  android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btnLand"
            android:layout_width="250dp"
            android:text="Table of Land Transport Accident"
            android:textColor="@color/white"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@color/textcolor" />


    </LinearLayout>





</LinearLayout>